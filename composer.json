{
    "name": "shadowcastiel/phpstan-tests-check",
    "description": "PHPStan extension for analyzing test attributes",
    "type": "phpstan-extension",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "phpstan/phpstan": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "symfony/process": "^5.0|^6.0|^7.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "vimeo/psalm": "^5.0"
    },
    "scripts": {
        "test": "phpunit tests/TestRunner.php tests/Unit/",
        "test:phpstan": "phpstan analyse --configuration=tests/phpstan-test.neon tests/fixtures",
        "analyse": "phpstan analyse",
        "psalm": "psalm",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "qa": [
            "@analyse",
            "@psalm",
            "@cs-check",
            "@test"
        ]
    },
    "autoload": {
        "psr-4": {
            "ShadowCastiel\\PHPStan\\TestsCheck\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ShadowCastiel\\PHPStan\\TestsCheck\\Tests\\": "tests/"
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}

